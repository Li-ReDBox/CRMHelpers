@page
@model CreateModel
@{
    ViewData["Title"] = "Create a new Contact";
}

<h3>Enter new Contact first name.</h3>

<div asp-validation-summary="ModelOnly"></div>
<form method="POST">
    <div class="form-group">
        <label>First Name: <input asp-for="Contact.Firstname" class="form-control"/></label>
    </div>
    <div class="form-group">
        <label>Last Name: <input asp-for="Contact.Lastname" class="form-control" /></label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</form>
