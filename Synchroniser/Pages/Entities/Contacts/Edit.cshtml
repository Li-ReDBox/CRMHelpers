@page "{id:guid}"
@model ContactModel
@{
    ViewData["Title"] = "Edit CRM Contact";
}

<h3>@Model.Contact.Firstname @Model.Contact.Lastname</h3>
<dl class="dl-horizontal">
    <dt>Name</dt>
    <dd>@Model.Contact.Firstname @Model.Contact.Lastname</dd>
    <dt>Title</dt>
    <dd>@Model.Contact.Title</dd>
    <dt>ID</dt>
    <dd>@Model.Contact.Id</dd>
    <dt>Email</dt>
    <dd>@Model.Contact.Email</dd>
    <dt>Username</dt>
    <dd>@Model.Contact.Username</dd>
    <dt>Description</dt>
    <dd>@Model.Contact.Description</dd>
    <dt>Department</dt>
    <dd>@Model.Contact.Department</dd>
    <dt>Create on</dt>
    <dd>@Model.Contact.CreatedOn</dd>
    <dt>Phone number</dt>
    <dd>@Model.Contact.Phone</dd>
    <dt>Status</dt>
    <dd>@Model.Contact.Status</dd>
</dl>

<h3>Edit</h3>
<form method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <input asp-for="Contact.Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Contact.Department" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Contact.Department" required class="form-control"/>
            <span asp-validation-for="Contact.Department"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-danger">Save</button>
        </div>
    </div>
</form>
